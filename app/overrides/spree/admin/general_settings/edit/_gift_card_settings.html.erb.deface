<!-- insert_before '[data-hook=buttons]' -->

  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">
            <%= Spree.t(:gift_card_settings)%>
          </h1>
        </div>

        <div class="panel-body">
          <div class="form-group">
            <%= label_tag :allow_gift_card_redeem do %>
              <%= hidden_field_tag :allow_gift_card_redeem, 0 %>
              <%= check_box_tag :allow_gift_card_redeem, 1, Spree::Config.allow_gift_card_redeem %>
              <%= Spree.t(:allow_gift_card_redeem) %>
            <% end %>
          </div>
          <div class="form-group">
            <%= label_tag :emails_must_match do %>
              <%= hidden_field_tag :emails_must_match, 0 %>
              <%= check_box_tag :emails_must_match, 1, Spree::Config.emails_must_match %>
              <%= Spree.t(:emails_must_match) %>
            <% end %>
          </div>
          <div class="form-group">
            <%= label_tag :use_store_name_as_email do %>
              <%= hidden_field_tag :use_store_name_as_email, 0 %>
              <%= check_box_tag :use_store_name_as_email, 1, Spree::Config.use_store_name_as_email %>
              <%= Spree.t(:use_store_name_as_email) %>
            <% end %>
          </div>          
        </div>
      </div>
    </div>
  </div>
